generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  sessions     Session[]
  jobs         Job[]
  createdAt    DateTime  @default(now())
}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  name      String   // nama session / folder (biasanya email)
  path      String   // path ke userDataDir
  createdAt DateTime @default(now())
}

model Job {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String   // create_sessions | join_groups | post_comment
  status    String   // running | stopped | finished | failed
  meta      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
